<% content_for :content do %>
<br>
<br>

<%if @products.any?%>
	<div class="container">
		<%= render 'partials/products_store', products: @products, order_item: @order_item %>
	</div>
<%else%>
<div class="container">

	<div class="text-left" style="padding-top:8px;margin-bottom:20px">
		<h3 style="    margin-bottom: 0px;">Avisos</h3>
		<%= image_tag 'linea.png', style:"width: 100%", height:"2"%>
		<p> No se encontraron resultados</p>
	</div>
</div>

	<% content_for :script do %>
		<script>
		swal({
			title: "DrinksCity",
			text: "No hay ningun elemento que coincida con su busqueda",
			icon: "warning",
		});
		</script>

	<%end%>
<%end%>



<%end%>
