<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-lg-12 col-md-12 col-xs-12">
    <div class="hidden-xs hidden-sm">
      <div class="x_title">
        <div class="row">
          <div class="col-md-7 col-xs-12 col-sm-12">
            <h2>Avisos</h2>
          </div>

          <div class="col-md-5 col-xs-12 col-sm-12">
            <%= form_tag admin_products_path, method: :get do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], autocomplete: "off", class: "form-control" %>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: "btn btn-default" %>
              </span>
            </div>
          <% end %>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead style="background-image: url(/assets/banda.png); color: white">
              <tr>
                <th>NÂ°</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @products.each_with_index do |product, index| %>
                  <td><%= index + 1 %></td>
                  <td><%= image_tag product.image.url(:mini), width: '50px' %></td>
                  <td><%= product.name %></td>
                  <td><%= truncate(product.description.html_safe, length:35) %></td>
                  <td><%= number_to_currency( product.price, precision: 0, format: "%u %n c/u" ) %></td>
                  <td><%= product.stock %></td>
                  <td> 
                    <div class="btn-group">
                      <a class="btn btn-default btn-block rd-0" href="<%=admin_product_path(product)%>" ><%=fa_icon "eye"%></a>
                      <br>
                      <a class="btn btn-default btn-block rd-0" href="<%=edit_admin_product_path(product)%>" ><%=fa_icon "pencil"%></a>
                      <br>
                      <a class="btn btn-default btn-block rd-0" href="<%=admin_product_path(product)%>" data-method="DELETE" data-confirm="Esta seguro que desea eliminar este producto?" ><%=fa_icon "trash"%></a>
                    </div>
                  </td>
              </tr>
                <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="visible-xs visible-sm">
      
    </div>
  </div>
</div>
