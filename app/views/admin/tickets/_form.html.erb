    <%= form.label :stock %>
    <%= form.number_field :stock, id: :ticket_stock %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.text_field :active, id: :ticket_active %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date, id: :ticket_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date, id: :ticket_end_date %>
