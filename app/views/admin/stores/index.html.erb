<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Tiendas</h2>
        <ul class="nav navbar-right panel_toolbox">
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="hidden-xs hidden-sm">
        <table class="table table-hover table-striped">
          <thead style="background-image: url(/assets/banda.png); color: white">
            <tr>
              <th>Nombre</th>
              <th>Telefono Representante</th>
              <th>Direccion</th>
              <th>Tipo</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
              <% @stores.each do |store| %>
                <tr>
                  <td><%= store.name %></td>
                  <td><%= store.legal_agent_phone %></td>
                  <td><%= store.address %></td>
                  <td><%= store.kind.titleize %></td>

                  <td> 
                    <div class="btn-group">
                          <%if store.status == "pendig"%>
                            <a class="btn btn-default btn-block" href="<%=admin_accept_store_path(id: store.id)%>" ><%=fa_icon "check"%></a>
                          <%else%>
                            <!--<a class="btn btn-default" href="<%=admin_store_path(store)%>" ><%=fa_icon "eye"%></a>-->

                          <%end%>
                          <a class="btn btn-default btn-block" href="<%=edit_admin_store_path(store)%>" ><%=fa_icon "pencil"%></a>
                          <a class="btn btn-default btn-block" href="<%=admin_products_path(store_id: store.id)%>" ><%=fa_icon "building"%></a>

                        <%= link_to admin_delete_store_path(store), class: "btn btn-default btn-block rd-0" do %>
                          <%=fa_icon "trash"%>
                        <% end %>
                    </div>
                  </td>
                </tr>
              <%end%>
          </tbody>
        </table>
      </div>

      <div class="visible-xs visible-sm">
        <% @stores.each do |store| %>
          <br>
            <div class="row">
              <div class="col-xs-10">
                  <p><b>Nombre:</b> <%= store.name %></p>
                  <p><b>Teléfono:</b> <%= store.legal_agent_phone %></p>
                  <p><b>Dirección:</b> <%= store.address %></p>
                  <p><b>Tipo:</b> <%= store.kind.titleize %></p>
                </div>

              <div class="col-xs-2">
                <div class="btn-group">
                          <%if store.status == "pendig"%>
                            <a class="btn btn-default btn-block" href="<%=admin_accept_store_path(id: store.id)%>" ><%=fa_icon "check"%></a>
                          <%else%>
                            <!--<a class="btn btn-default" href="<%=admin_store_path(store)%>" ><%=fa_icon "eye"%></a>-->

                          <%end%>
                          <br><br>
                          <a class="btn btn-default btn-block" href="<%=edit_admin_store_path(store)%>" ><%=fa_icon "edit"%></a>

                          <br><br>

                          <a class="btn btn-default btn-block" href="<%=admin_products_path(store_id: store.id)%>" ><%=fa_icon "building"%></a>
                          <br><br>
                          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#deleteStore"><%=fa_icon "trash"%></button>
                    </div>
              </div>
            </div>

            <hr>

<div id="deleteStore" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h2>¿Estas seguro de eliminarlo?</h2>
        <br>
        <%= link_to "Eliminar", admin_delete_store_path(store), class: "btn btn-primary" %>
        <%= link_to "Cancelar", "#", "data-dismiss"=>"modal", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
          <%end%>
      </div>
    </div>
  </div>
</div>