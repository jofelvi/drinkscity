<div class="nested-fields col-md-6 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Producto<small></small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
        <li>
          <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li>
          <%= link_to_remove_association f do %>
            <i class="fa fa-close"></i>
          <% end %>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <br />
      <%= f.hidden_field :user_id, value: current_user.id, readonly: true %>

      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.text_field :name, class:"form-control has-feedback-left", id: :user_fullname, placeholder:"Nombre del producto", disabled: disabled%>
        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
      </div>

      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.file_field :image, class: 'form-control' %>        
      </div>

      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.number_field :price, class:"form-control has-feedback-left", id: :user_fullname, placeholder:"Precio" , disabled: disabled%>
        <span class="fa fa-dollar form-control-feedback left" aria-hidden="true"></span>
      </div>

      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.number_field :stock, class:"form-control has-feedback-left", id: :user_fullname, placeholder:"Stock",  disabled: disabled %>
        <span class="fa fa-shopping-bag form-control-feedback left" aria-hidden="true"></span>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">
          Descripción
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <%= f.text_area :description, class:"form-control", id: :user_fullname, placeholder:"Descripcion del producto", disabled: disabled %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">
          Tipo de aviso
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <%= f.select(:priority, Product.priorities.keys.map {|key| [ key.humanize, key]}, { :include_blank => "Seleccione el tipo de aviso"}, {:class => "form-control", disabled: disabled}) %>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">
          Categoría
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <%= f.select(:category, Product.categories.keys.map {|key| [ key.humanize, key]},{:include_blank => "Seleccione la categoria del producto"}, {:class => "form-control", disabled: disabled}) %>          
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">
          ¿Activo?
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <div id="gender" class="btn-group" data-toggle="buttons">
            Si <%= f.radio_button :active, true,  class: 'flat' %> &nbsp;
            No <%= f.radio_button :active, false, class: 'flat'%>
          </div>
        </div>
      </div>


      <div class="ln_solid"></div>

      <div class="form-group">
        <label class="control-label col-md-12 col-sm-12 col-xs-12">
          <%= link_to_remove_association f do %>
            Eliminar este producto
          <% end %>
        </label>
      </div>

    </div>
  </div>
</div>
