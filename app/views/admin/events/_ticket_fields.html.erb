<div class="nested-fields col-md-6 col-xs-12">
	<div class="x_panel">
		<div class="x_title">
			<h2>Entrada<small></small></h2>
			<ul class="nav navbar-right panel_toolbox">
				<li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
				<li>
					<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
				</li>
				<li>
				  <%= link_to_remove_association f do %>
				    <i class="fa fa-close"></i>
				  <% end %>
				</li>
			</ul>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">
			<br />
			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Nombre
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<%= f.text_field :name, class:"form-control", placeholder: 'Nombre de la entrada' %>		
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Â¿Activa?
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<div id="gender" class="btn-group" data-toggle="buttons">
						Si <%= f.radio_button :active, true, class: 'flat' %> &nbsp;
				  	 	No <%= f.radio_button :active, false, class: 'flat'%>
					</div>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Precio
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<%= f.number_field :price, class:"form-control", placeholder: 'Precio de venta' %>
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Disponibles
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<%= f.number_field :stock, class:"form-control", placeholder: 'Stock de la entrada' %>
				</div>
			</div>
			
			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Inicia: 
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<%= f.datetime_field :start_date, class:"form-control", placeholder: 'Se vende desde el' %>
				</div>
			</div>
			
			<div class="form-group">
				<label class="control-label col-md-3 col-sm-3 col-xs-12">
					Finaliza: 
				</label>
				<div class="col-md-9 col-sm-9 col-xs-12">
					<%= f.datetime_field :end_date, class:"form-control", placeholder: 'Se vende hasta el' %>
				</div>
			</div>

			<div class="ln_solid"></div>

			<div class="form-group">
				<label class="control-label col-md-12 col-sm-12 col-xs-12">
					<%= link_to_remove_association f do %>
						Eliminar esta entrada
					<% end %>
				</label>
			</div>

		</div>
	</div>
</div>